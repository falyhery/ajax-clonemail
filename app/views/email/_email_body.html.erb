<div class="container">
    <div class="card">
        <h4>Objet: <%= email.object %></h4>
        <textarea rows="10" cols="70"><%= email.body %></textarea>

        <div class="row">
            <div class="col-md-8"></div>
                <%= button_to "Supprimer", email_path(email.id), method: "delete", remote: true, class: "btn btn-danger" %>&nbsp
